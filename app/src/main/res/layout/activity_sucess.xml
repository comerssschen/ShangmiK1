<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:drawableLeft="@drawable/sucess"
        android:drawablePadding="20dp"
        android:paddingVertical="30dp"
        android:text="订单详情"
        android:textColor="#242424"
        android:textSize="40sp" />


    <LinearLayout
        android:id="@+id/lly_shopcar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAEAEA"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_menus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@null"
                android:listSelector="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingHorizontal="40dp">

                <TextView
                    android:id="@+id/tv_total_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="共2件商品"
                    android:textColor="#5A5A5A"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计：￥45.00"
                    android:textColor="#5A5A5A"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EB3434"
            android:orientation="horizontal"
            android:paddingVertical="26dp">

            <TextView
                android:id="@+id/tv_bt_parm1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="22dp"
                android:gravity="center_vertical"
                android:text="654465"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bt_parm2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="优惠金额  ￥0.00"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tv_time_tiger"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                android:gravity="center_vertical"
                android:text="倒计时"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>