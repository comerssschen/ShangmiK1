<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#444">

    <LinearLayout
        android:id="@+id/ll_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_parm1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="654545"
                    android:textColor="#5A5A5A"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_parm2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="1551"
                    android:textColor="#F2143F"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:src="@drawable/pop_close" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="选择支付方式"
            android:textColor="#343435"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_face_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:background="#F7F4F4"
                android:drawableTop="@drawable/scorface"
                android:drawablePadding="20dp"
                android:gravity="center_horizontal"
                android:paddingVertical="20dp"
                android:text="支付宝刷脸付"
                android:textColor="#242424"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_bt2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:background="#F7F4F4"
                android:drawableTop="@drawable/qrcode_wx"
                android:drawablePadding="20dp"
                android:gravity="center_horizontal"
                android:paddingVertical="20dp"
                android:text="微信扫码付"
                android:textColor="#242424"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_bt3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:background="#F7F4F4"
                android:drawableTop="@drawable/qrcode_ali"
                android:drawablePadding="20dp"
                android:gravity="center_horizontal"
                android:paddingVertical="20dp"
                android:text="支付宝扫码付"
                android:textColor="#242424"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>